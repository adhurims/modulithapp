@model Ordering.Application.DTOs.OrderDto

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Items</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.Items)
                {
                    <li>@item.ProductId - Quantity: @item.Quantity - Price: @item.Price</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-action="List" class="btn btn-secondary">Back to List</a>
